<?xml version="1.0" encoding="utf-8"?>
<s:TabbedViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009" locale="zh-CN"
                                  xmlns:s="library://ns.adobe.com/flex/spark" applicationComplete="init()">

    <fx:Style source="main.css" />
        <fx:Style>
        @namespace s "library://ns.adobe.com/flex/spark";
 
        s|ActionBar
        {
        }
 
        s|ActionBar #titleDisplay
        {
        }
 
        s|TabbedViewNavigator #tabBar
        {
            iconPlacement:top;
        }
    </fx:Style>
    <fx:Script>
        <![CDATA[
            import com.airsmth.defines.*;
            import com.airsmth.views.Home;
            public var TopConfig:XML;
            
            protected function init():void {
                var config:XML = Util.getConfig();
                TopConfig = config;
                homeTab.pushView(Home, config);
            }
            
        ]]>
    </fx:Script>
    <s:ViewNavigator id="homeTab" width="100%" height="100%"
        icon="@Embed(source='assets/heart.png')" />
    <s:ViewNavigator id="mailTab" width="100%" height="100%"
        firstView="com.airsmth.views.Mail"
        icon="@Embed(source='assets/mail_red.png')" />
</s:TabbedViewNavigatorApplication>

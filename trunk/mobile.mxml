<?xml version="1.0" encoding="utf-8"?>
<s:TabbedViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009"
                                  xmlns:s="library://ns.adobe.com/flex/spark" applicationComplete="init()">

    <fx:Style source="main.css" />
    <fx:Script>
        <![CDATA[
            import com.airsmth.defines.*;
            import com.airsmth.views.Home;
            
            protected function init():void {
                var config:XML = Util.getConfig();
                homeTab.pushView(Home, config);
            }
            
        ]]>
    </fx:Script>
    <s:ViewNavigator id="homeTab" label="Home" width="100%" height="100%" />
    <s:ViewNavigator id="mailTab" label="Mail" width="100%" height="100%"
        firstView="com.airsmth.views.Mail"/>
    <s:ViewNavigator id="configTab" label="Config" width="100%" height="100%"
        firstView="com.airsmth.views.ConfigView" />
</s:TabbedViewNavigatorApplication>

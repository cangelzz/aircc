<?xml version="1.0" encoding="UTF-8"?> 
<application xmlns="http://ns.adobe.com/air/application/2.6"> 
    <id>com.cc.airsmth</id> 
    <versionNumber>0.1</versionNumber> 
    <filename>AirSMTH</filename>
	<description>Air application for Newsmth.net</description>
    <copyright>Copyright 2011 cangelzz@newsmth</copyright>
    <initialWindow> 
        <content>mobile.swf</content> 
        <visible>true</visible> 
        <width>480</width> 
        <height>800</height>
        <resizable>true</resizable>
        <systemChrome>standard</systemChrome>
		<aspectRatio>portrait</aspectRatio>
        <autoOrients>false</autoOrients>
        <fullScreen>true</fullScreen>
        <renderMode>cpu</renderMode>
    </initialWindow>
    <icon>
        <image128x128>assets/icon128.png</image128x128> 
    </icon>
    <iPhone>
		<!-- A list of plist key/value pairs to be added to the application Info.plist -->
		<InfoAdditions>
            <![CDATA[
                <key>UIDeviceFamily</key>
                <array>
                    <string>1</string>
                    <string>2</string>
                </array>
                <key>UIStatusBarStyle</key>
                <string>UIStatusBarStyleBlackOpaque</string>
                <key>UIRequiresPersistentWiFi</key>
                <string>YES</string>
            ]]>
        </InfoAdditions>
        <!-- <requestedDisplayResolution></requestedDisplayResolution> -->
	</iPhone>
    
    <android>
        <manifestAdditions><![CDATA[
            <manifest android:installLocation="auto">
                <uses-permission android:name="android.permission.INTERNET"/>
                <uses-permission android:name="android.permission.WRITE_OWNER_DATA"/>
            </manifest>
        ]]></manifestAdditions>
    </android>
</application>
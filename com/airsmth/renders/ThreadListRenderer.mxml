<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Script> 
        <![CDATA[ 
            
            override public function set data(value:Object):void { 
                super.data = value; 
                
                if (value== null) 
                    return; 
                if (itemIndex % 2 == 0) scBackground.color = 0xFFFFF0;
                else scBackground.color =  0xF6F6F6;
                lbTitle.text = value.title;
                lbAuthor.text = value.author;
                if (value.d) dFlagColor.color = 0x000000;
                //else hGroup.removeElement(dFlagRect);
                if (value.a) aFlagColor.color = 0xFF0000;
                //else hGroup.removeElement(aFlagRect);
                if (value.m) mFlagColor.color = 0x00FF00;
                //else hGroup.removeElement(mFlagRect);
                //if (value.g) gFlag.color = 0xFFFF00;
            }
        ]]> 
    </fx:Script> 
    <s:Group width="100%">
    <s:Rect width="100%" height="100%">
        <s:fill>
            <s:SolidColor id="scBackground" />
        </s:fill>
    </s:Rect>

    <s:HGroup width="100%" height="100%" gap="0" id="hGroup">    
        <s:Rect top="0" left="2" bottom="0" width="2" height="100%" id="dFlagRect">
            <s:fill>
                <s:SolidColor id="dFlagColor" color="0xFFFFFF" />
            </s:fill>
        </s:Rect>
        <s:Rect top="0" left="2" bottom="0" width="2" height="100%" id="aFlagRect">
            <s:fill>
                <s:SolidColor id="aFlagColor" color="0xFFFFFF" />
            </s:fill>
        </s:Rect>
        <s:Rect top="0" left="4" bottom="0" width="2" height="100%" id="mFlagRect">
            <s:fill>
                <s:SolidColor id="mFlagColor" color="0xFFFFFF" />
            </s:fill>
        </s:Rect>
        <s:VGroup width="95%" id="threadGroup" paddingBottom="3" paddingTop="3" paddingLeft="3">
            <s:Label id="lbTitle" width="100%" />
            <s:Label id="lbAuthor" paddingBottom="10" fontWeight="bold" />
        </s:VGroup>
    </s:HGroup>
    </s:Group>
</s:ItemRenderer>
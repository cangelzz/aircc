<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Script> 
        <![CDATA[ 
            
            override public function set data(value:Object):void { 
                super.data = value; 
                
                if (value== null) 
                    return; 
                lbTitle.text = value.title;
                lbAuthor.text = value.author;
                if (value.d) dFlag.color = 0x444444;
                if (value.a) aFlag.color = 0xFF0000;
                if (value.m) mFlag.color = 0x0000FF;
                //if (value.d) dFlag.color = 0x444444;
            } 
        ]]> 
    </fx:Script> 
    
    <s:HGroup width="100%" height="100%" gap="0">    
        <s:Rect top="0" left="0" bottom="0" width="2" height="100%">
            <s:fill>
                <s:SolidColor id="dFlag" color="0xFFFFFF" />
            </s:fill>
        </s:Rect>
        <s:Rect top="0" left="2" bottom="0" width="2" height="100%">
            <s:fill>
                <s:SolidColor id="aFlag" color="0xFFFFFF" />
            </s:fill>
        </s:Rect>
        <s:Rect top="0" left="4" bottom="0" width="2" height="100%">
            <s:fill>
                <s:SolidColor id="mFlag" color="0xFFFFFF" />
            </s:fill>
        </s:Rect>
    <s:VGroup width="95%" id="threadGroup" paddingBottom="3" paddingTop="3" paddingLeft="5" >
        <s:Label id="lbTitle" width="100%" />
        <s:Label id="lbAuthor" paddingBottom="10" fontWeight="bold" />
    </s:VGroup>
        </s:HGroup>
</s:ItemRenderer>